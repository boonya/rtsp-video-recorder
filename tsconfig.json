{
	"extends": "@tsconfig/node18/tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,
		"removeComments": true,
		"lib": ["es2018"],
		"target": "es2018",
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"dist",
		"coverage",
		"**/*.spec.ts",
	]
}
